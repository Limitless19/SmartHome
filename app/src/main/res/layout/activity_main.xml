<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="60dp"
        android:gravity="start"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appliances"
        android:textFontWeight="100"
        android:textSize="25dp"
        android:textColor="#000000"
        />
        <Space
            android:layout_width="30dp"
            android:layout_height="0dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status"
        android:textSize="25dp"
        android:textColor="#000000"
        />

</LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#B3B2B0"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginBottom="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:id="@+id/fanImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fan"/>
        <Space
            android:layout_width="70dp"
            android:layout_height="0dp"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="OFF" />
    </LinearLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:id="@+id/bulbImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bulb" />
          <Space
              android:layout_width="70dp"
              android:layout_height="0dp"/>
          <TextView
              android:layout_width="60dp"
              android:layout_height="40dp"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="OFF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:id="@+id/televisionImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/tv" />
        <Space
            android:layout_width="70dp"
            android:layout_height="0dp"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="OFF" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:id="@+id/fridgeImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fridge" />
        <Space
            android:layout_width="70dp"
            android:layout_height="0dp"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="OFF" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:id="@+id/pumpImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pump"
            />
        <Space
            android:layout_width="70dp"
            android:layout_height="0dp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="OFF" />

    </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tap_the_button_and_speak_the_commands"
        android:textColorHint="#414146"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:cursorVisible="false"
        />

    <Button
        android:id="@+id/speechButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/click_here"
        />

</LinearLayout>